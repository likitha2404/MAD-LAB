<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67E2ED"
    android:backgroundTint="#B759C856"
    android:backgroundTintMode="add"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnClear"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="372dp"
        android:text="c"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="292dp"
        android:text="+"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="292dp"
        android:text="="
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="292dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="292dp"
        android:text="."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="212dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="212dp"
        android:text="3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="212dp"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="212dp"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="132dp"
        android:text="*"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="132dp"
        android:text="6"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="132dp"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="132dp"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="/"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/btnNine"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="9"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/btnEight"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="8"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/btnSeven"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="SIMPLE CALCULATOR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="110dp"
        android:layout_height="39dp"
        android:layout_marginTop="36dp"
        android:text="Result"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/etResult"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="61dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="7"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etResult" />

</androidx.constraintlayout.widget.ConstraintLayout>
